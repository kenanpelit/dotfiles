* {
    font-family: "Hack Nerd Font";
    font-size: 16px;
    font-weight: normal;
    /* Font özelliklerini düzelttik */
    font-feature-settings: "zero" 1, "ss01" 1, "ss02" 1, "ss03" 1, "ss04" 1, "ss05" 1, "cv31" 1;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

#window {
    background-color: rgba(30, 30, 46, 0.95);
    color: #cdd6f4;
    border: 2px solid #cba6f7;
    border-radius: 15px;
}

#outer-box {
    padding: 15px;
}

#input {
    background-color: rgba(49, 50, 68, 0.7);
    border: none;
    border-radius: 8px;
    margin: 0px 0px 10px 0px;
    padding: 8px 12px;
    color: #f5c2e7;
    font-size: 16px;
}

#scroll {
    margin: 5px 0px;
}

#text {
    color: #cdd6f4;
    margin: 0px 5px;
    padding: 3px;
}

#entry {
    padding: 5px 10px;
    margin: 0px 0px;
    border-radius: 8px;
    transition: all 0.2s ease;
}

#entry:selected {
    background: linear-gradient(90deg, rgba(203, 166, 247, 0.7), rgba(245, 194, 231, 0.7));
    border-radius: 8px;
    color: #000000;
    font-weight: bold;
}

#text:selected {
    color: #000000;
    background: transparent;
    font-weight: bold;
}

#entry.category {
    font-weight: bold;
    color: #cba6f7;
    margin-top: 8px;
}

#entry:hover {
    background-color: rgba(49, 50, 68, 0.3);
}
